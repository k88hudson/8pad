@import "nib";

global-reset();

html, body, form, iframe {
  height: 100%;
}

#preview {
  width: 100%;
  border: none;
  box-sizing: border-box;
}

section {
  width: 50%;
  height: 100%;
  float: left;
  position: relative;
}

#editor {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}
