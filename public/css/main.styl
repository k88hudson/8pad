@import "nib";

global-reset();

/*********************************************************
* Globals
*/

hheight = 60px;

/*********************************************************
* Base
*/

body {
  font-family: sans-serif;
}

.hidden {
  display: none;
}

/*********************************************************
* Sections
*/

header {
  height: hheight;
  padding: 20px;
  border-bottom: 1px solid #CCC;
  box-sizing: border-box;
  text-align: center;
}

#main {
  position: absolute;
  top: hheight;
  bottom: 0;
  width: 100%;
}
section {
  width: 50%;
  height: 95%;
  float: left;
  position: relative;
}

/*********************************************************
* Editor
*/

#editor {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

/*********************************************************
* Preview
*/
#preview {
  width: 100%;
  height: 100%;
  border: none;
}
